<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_income"
            android:id="@+id/btn_income" android:layout_marginLeft="40dp"
            android:layout_marginTop="42dp"
            android:layout_marginStart="35dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:onClick="AddIncome"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_expense"
            android:id="@+id/btn_expense"
            android:layout_marginEnd="44dp" android:layout_alignTop="@+id/btn_income" android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp" android:onClick="AddExpenses"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/listView_transac_expense"
            android:layout_marginTop="120dp" android:layout_alignEnd="@+id/btn_income"/>
    <ListView android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/listView_transac_income"
              android:layout_alignTop="@+id/listView_transac_expense" android:layout_toEndOf="@+id/listView_transac_expense"/>
</RelativeLayout>

